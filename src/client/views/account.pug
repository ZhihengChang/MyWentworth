extends base

mixin profileMenuOption(label, icon, link, active)
    li(class=`${active ? 'side-nav--active':''}`)
        a(class=`${active ? 'account-side-nav--active':''}` href=`${link}`)
            img.svg-icon(src=`views/img/svgicon/${icon}.svg`)
            | #{label}

block content

    .account 
        .user-view 
            nav.user-view__menu 
                ul.account-side-nav
                    +profileMenuOption('Back', 'back-arrow', '/', false)
                    +profileMenuOption('Information', 'info', '#', true)
                    +profileMenuOption('Schedule', 'calendar', '#', false)
                    +profileMenuOption('Network', 'network', '#', false)
                    +profileMenuOption('Moments', 'sticky-notes', '#', false)
                    +profileMenuOption('Setting', 'settings', '#', false)
        
            .user-view__content 
                .user-view__info-container
                    .info-container-header 
                        .info-container-header-left
                            img.avatar(src=`${user.avatar || 'data/default/img/avatar.png'}`)
                        .info-container-header-center
                            p#student-name.heading-third.heading-third--wit= user.studentName
                            p#student-witid.heading-fourth= user.wit_id 
                        .info-container-header-right 
                            p#student-dpt.heading-third.heading-third--dpt= student.graduation.department
                            p#student-year.heading-fourth= `${student.graduation.exp_year.split('-')[0]}`



            
