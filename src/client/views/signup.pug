extends base

block content
    .div__signup
        .div__logo
            img(src ='views/img/mywit_logo.png' alt='mywit logo')
        
        form.form--signup
            .div__form--signup
                .div__witid
                    img.svg-icon(src='views/img/svgicon/identification.svg' alt='witid icon')
                    input#wit(type='text' name='wit_id' placeholder='WIT ID', required)

                .div__username
                    img.svg-icon(src='views/img/svgicon/user.svg' alt='username icon')
                    input#usn(type='text' name='username' placeholder='Username', required)

                .div__email
                    img.svg-icon(src='views/img/svgicon/email.svg' alt='username icon')
                    input#eml(type='text' name='username' placeholder='Email', required)

                .div__password
                    img.svg-icon(src='views/img/svgicon/padlock.svg' alt='username icon')
                    input#pwd(type='password' name='password' placeholder='Password', required)

                .div__passwordConfirm
                    img.svg-icon(src='views/img/svgicon/check-mark.svg' alt='username icon')
                    input#cfm(type="password" name='passwordConfirm' placeholder='Comfirm your password', required)
                
                .div__actions
                    .div__actions--login
                        a(href='/login') Have an account? 
                    .div__actions--notstudent
                        a(href='https://wit.edu/about/contact-us') Not a WIT student?

                .div__submit
                    button(type='submit') Signup